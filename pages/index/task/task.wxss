.task-container .navbar {
    margin: 30rpx;
    display: flex;
}

.task-container .navbar {
    border: 1px solid #3F51B5;
    border-radius: 10rpx;
}

.task-container .navbar .navbar-item {
    font-size: 28rpx;
    color: #3F51B5;
    flex: 1;
    text-align: center;
    padding: 5rpx 0;
}

.task-container .navbar .navbar-item:not(:last-child) {
    border-right: 1px solid #3F51B5;
}

.task-container .navbar .navbar-item.navbar-item-selected {
    color: white;
    background: #3F51B5;
}

.task-container .task,
.task-container .task-todaychecked-container,
.task-container .task-checked-container {
    margin: 0 30rpx;
}

.task-container .task-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 0;
}

.task-container .task-item .wx-checkbox-input {
    width: 35rpx;
    height: 35rpx;
    transform: translate(5rpx, -4rpx);
}

.task-container .task-item .wx-checkbox-input-checked {
    background: #ccc;
}

.task-container .task-item .wx-checkbox-input-checked::before {
    color: #656565;
    font-size: 30rpx;
}

.task-container .task-item .item-title {
    flex: 1;
    margin-left: 10rpx;
    font-size: 28rpx;
    color: #3F51B5;
}

.task-container .task-item .item-count {
    font-size: 24rpx;
    color: #656565;
    margin-right: 20rpx;
}

.task-container .task-item .item-difficulty image {
    width: 25rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.task-container .task-item .item-difficulty {
    font-size: 24rpx;
    color: white;
    margin-right: 20rpx;
    background: #f2f2f2;
    border-radius: 10rpx;
    padding: 5rpx 15rpx;
    display: flex;
    align-items: center;
}

.task-container .task-item .item-difficulty--diff1 {
    background: #FBCECA;
}
.task-container .task-item .item-difficulty--diff2 {
    background: #FB867A;
}
.task-container .task-item .item-difficulty--diff3 {
    background: #E12714;
}
.task-container .task-item .item-difficulty--diff4 {
    background: #9E1608;
}

.task-container .task-item .item-reward {
    font-size: 24rpx;
    color: #656565;
    width: 50rpx;
    text-align: right;
}

.task-container .todaychecked-bar,
.task-container .checked-bar {
    font-size: 24rpx;
    color: #656565;
    background: #f2f2f2;
    padding: 5rpx 0;
}

.task-container .todaychecked-bar .bar-text,
.task-container .checked-bar .bar-text {
    margin-left: 30rpx;
}