<template name="store-item">
    <view class="store-item">

        <view class="left">

            <view class="item-info">
                <text class="item-name">{{title}}</text>
            </view>

            <view class="item-time">
                <text>{{get}}/<text wx:if="{{allGet === -1}}">∞</text>
                <text wx:else>{{allGet}}</text></text>
            </view>

        </view>

        <view class="item-expense">

            <block wx:if="{{grade === 0}}">
                <view class="item-type type-name item-easy">
                    <text>简单</text>
                </view>
                <view class="item-money">
                    <text>-2</text>
                </view>
            </block>

            <block wx:if="{{grade === 1}}">
                <view class="item-type type-name item-normal">
                    <text>普通</text>
                </view>

                <view class="item-money">
                    <text>-4</text>
                </view>
            </block>


            <block wx:if="{{grade === 2}}">
                <view class="item-type type-name item-medium">
                    <text>中等</text>
                </view>

                <view class="item-money">
                    <text>-9</text>
                </view>
            </block>


            <block wx:if="{{grade === 3}}">
                <view class="item-type type-name item-hard">
                    <text>困难</text>
                </view>

                <view class="item-money">
                    <text>-16</text>
                </view>
            </block>

        </view>





    </view>
</template>