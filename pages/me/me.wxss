@import "./feature-template/feature-template.wxss";

page {
    background: #f5f5f5;
}

.common-border {  
    width: 90%;
    border-radius: 5px;
    margin: 20px auto;
    background: white;
    box-shadow: 2px 2px 7px gainsboro;
}
.top {
    display: flex;
}

.top image {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    margin: 10px;
}

.top text {
    display: flex;
    align-items: center;
    margin-left: 10px;
}

.data {
    display: flex;
    justify-content: space-around;
    height: 220rpx;
    position: relative;
}

.data image {
    width: 85rpx;
    height: 85rpx;
    margin: 15px auto;
}

.bar {
    width: 1.5px;
    height: 160rpx;
    content: '';
    background: rgb(240, 240, 240);
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    
}

.data-level, .data-money {
    display: flex;
    flex-direction: column;
    text-align: center;
    padding-bottom: 15px;
    font-size: 0.8rem;
}


