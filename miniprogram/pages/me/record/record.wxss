.record-container .record-head .record-type-selector {
    text-align: center;
}

.record-container .record-head .record-type-selector picker {
    font-size: 28rpx;
    padding: 5rpx 0;
}

.record-container .record-head .record-type-selector picker .picker,
.record-container .record-head .record-type-selector picker .selector-arrow {
    display: inline-block;
}

.record-container .record-head .record-type-selector picker .selector-arrow {
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 15rpx solid #ccc;
    margin-left: 10rpx;
}

.record-container .record {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.record-container .record .record-item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

.record-container .record .record-item:not(:last-child)::after {
    content: "";
    height: 2rpx;
    width: calc(100% - 40rpx);
    background: rgb(240, 240, 240);
    margin-top: 20rpx;
}

.record-container .record .item-describe {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.record-container .record .item-describe .item-title {
    font-size: 32rpx;
    font-weight: 550;
    color: #3f51b5;
}

.record-container .record .item-describe .item-time {
    font-size: 28rpx;
    color: #989898;
    margin-top: 10rpx;
}

.record-container .record .item-money {
    font-size: 32rpx;
    font-weight: 900;
    margin-right: 20rpx;
}

.record-container .record .item-money.item-money--pay {
    color: #4FAA39;
}

.record-container .record .item-money.item-money--income {
    color: #FF8080;
}