/* pages/index/store/store.wxss */
@import "./store-item/store-item.wxss";

.items {
    border-bottom: 1px solid gainsboro;
}

.set-button {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #3f51b5;
    color: white;
    font-size: 50rpx;
    font-weight: 700;
    box-shadow: 3px 3px 8px gainsboro;

    display: flex;
    justify-content: center;
    align-items: center;

}

.move-area {
    position: absolute;
    bottom: 100rpx;
    right: 120rpx;
}

.set-menu {
    position: absolute;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
    font-size: 28rpx;
}

/* 蒙版 */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg {
    width: 580rpx;
    height: 700rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9999;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
}

.inputtext {
    color: #aaa;
    width: 460rpx;
    height: 80rpx;
    background: #f1f1f1;
    text-align: center;
    border-radius: 12rpx;
    text-indent: 0;
    margin: 30rpx auto;
}

.picker-difficulty {
    width: 460rpx;
    height: 80rpx;
    background: #f1f1f1;
    border-radius: 12rpx;
    margin: 30rpx auto;
}

.picker {
    color: #aaa;
    text-align: center;
    padding: 25rpx;
    font-size: 30rpx;
    line-height: 30rpx;
}

.save {
    color: #fff;
    width: 270rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #3f51b5;
    text-align: center;
    border-radius: 12rpx;
    margin-top: 80rpx;
    font-size: 28rpx;
    text-indent: 0em;
}

/* 关闭 */

.close-mask {
    width: 80rpx;
    height: 80rpx;
    position: relative;
    /*right: -47%;
    top: -15rpx;
    */
    right: -45%;
    top: -10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 50rpx;
    /*
    border-radius: 50%;
    background: rgb(171, 171, 171);
    color: white;
    */
}
